                        </dd>
                        <dt class="col-sm-4 border-top-card-body">
                            @Html.DisplayNameFor(model => model.Observacao):
                        </dt>
                        <dd class="col-sm-8 border-top-card-body">
                            @Html.DisplayFor(model => model.Observacao)
                        </dd>
                    </dl>
                </div>

            </div>

            <div class="card card-movimentacao">
