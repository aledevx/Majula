@model Pk.Models.Equipamento

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Adicionar</title>
</head>

<body>
    <h3 style="height: 50px; width: 180px;">Equipamento</h3>
    <div class="row">
        <div class="col-md-5 p-md-3" style="box-shadow: 0px 1px 2px 2px rgba(0, 0, 0, 0.25);">
            <form asp-action="Criar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-12 row">
                    <div class="col-md-4">
                        <label asp-for="Tombamento" class="control-label"></label>
                        <input asp-for="Tombamento" class="form-control" />
                        <span asp-validation-for="Tombamento" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Categoria" class="control-label"></label>
                        <select asp-for="Categoria" class="form-control" asp-items="ViewBag.Categoria">
                            <option value="">Selecione...</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="MarcaId" class="control-label">Marca</label>
                        <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId" required>
                            <option value="">Selecione...</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-12 row">
                    <div class="col-md-3">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                    </div>
                    <div class="col-md-9">
                        <label asp-for="Responsavel" class="control-label"></label>
                        <input asp-for="Responsavel" class="form-control" />
                        <span asp-validation-for="Responsavel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 row">
                    <div class="col-md-6">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea asp-for="Descricao" class="form-control"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Observacao" class="control-label"></label>
                        <textarea asp-for="Observacao" class="form-control"></textarea>
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>
                </div>
                <hr>
                <div class="form-group d-flex" style="justify-content: end;">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-light">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>