<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gti - @ViewData["Title"]</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="shortcut icon" href="/img/ovni.png">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/der.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="../../index3.html" class="nav-link">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->


                <!-- Messages Dropdown Menu -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar  alien-sider-menu elevation-4">
            <!-- Brand Logo -->
            <div class="div-icones-sider">
                <div class="alien brand-text">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="/img/alien-logo.png"
                            class="img-circle elevation-2"></a>
                </div>
                <div class="gti brand-text">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="/img/majula-icon.png"></a>
                </div>
            </div>
            @* <a href="../../index3.html" class="">
                <img src="/img/gti-icon.png">
                <span class="brand-text font-weight-light">COUSA</span>
                </a> *@

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel " style="display: flex; align-items: center;">
                    <div class="image">
                        <img src="/img/alien-tecnico5.png" class="img-circle elevation-2">
                    </div>
                    <div class="info">
                        Alexandre Oliveira
                    </div>

                </div>

                <!-- SidebarSearch Form -->
                @* <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search"
                    aria-label="Search">
                    <div class="input-group-append">
                    <button class="btn btn-sidebar">
                    <i class="fas fa-search fa-fw"></i>
                    </button>
                    </div>
                    </div>
                    </div> *@

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a class="nav-link item-menu-alien" asp-area="" asp-controller="Home" asp-action="Index">
                                <div class="d-flex">
                                    <div class="image">
                                        <i class="fas fa-home img-circle elevation-2"></i>
                                    </div>
                                    <div class="brand-text" style="margin-left: 5px;">
                                        In√≠cio
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link item-menu-alien" asp-area="" asp-controller="Home" asp-action="Index">
                                <div class="d-flex">
                                    <div class="image">
                                        <i class="fas fa-memory img-circle elevation-2"></i>
                                    </div>
                                    <div class="brand-text" style="margin-left: 5px;">
                                        Hardware
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link item-menu-alien" asp-area="" asp-controller="Monitores"
                                asp-action="Index">
                                <div class="d-flex">
                                    <div class="image">
                                        <i class="fas fa-desktop img-circle elevation-2"></i>
                                    </div>
                                    <div class="brand-text" style="margin-left: 5px;">
                                        Monitores
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link item-menu-alien" asp-area="" asp-controller="Computadores"
                                asp-action="Index">
                                <div class="d-flex">
                                    <div class="image">
                                        <i class="fas fa-hdd"></i>
                                    </div>
                                    <div class="brand-text" style="margin-left: 5px;">
                                        Computadores
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link item-menu-alien" asp-area="" asp-controller="Equipamentos"
                                asp-action="Index">
                                <div class="d-flex">
                                    <div class="image">
                                        <i class="fas fa-window-maximize img-circle elevation-2"></i>
                                    </div>
                                    <div class="brand-text" style="margin-left: 5px;">
                                        Equipamentos
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link item-menu-alien" asp-area="" asp-controller="Home" asp-action="Index">
                                <div class="d-flex">
                                    <div class="image">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </div>
                                    <div class="brand-text" style="margin-left: 5px;">
                                        Sair
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewBag.Title</h1>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <!-- Default box -->
                            <div class="card">
                                <div class="card-body">
                                    @RenderBody()
                                </div>
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.0 - BETA
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year - DER/GTI</strong> - Todos os direitos reservados.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/js/demo.js"></script>


</body>

</html>
